# Google Gemini API (Primary AI)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_NAME=gemini-2.5-flash

# Groq API (Secondary/Fallback AI)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL_NAME=gemma2-9b-it

# AI Configuration
AI_ENABLED=true
AI_TEMPERATURE=0.0
SYSTEM_PROMPT=
HANDOVER_KEYWORDS=轉真人,人工客服
AUTO_SWITCH_MINUTES=5
ADMIN_LINE_ID=Uxxxxxxxx...

# School / Bot Identity
# 學校或單位名稱，會出現在 AI 自我介紹中，例如：海青工商導師室
SCHOOL_NAME=XX學校導師室

# Notion Integration
NOTION_API_KEY=secret_xxxxxxxx
# 知識庫頁面 ID（逗號分隔，可多個）
NOTION_PAGE_IDS=your_page_id_1,your_page_id_2
# 系統設定 Database ID（可選）
NOTION_CONFIG_DB_ID=
# 對話 Session Database ID（可選）
NOTION_SESSION_DB_ID=

# LINE Messaging API
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token
LINE_CHANNEL_SECRET=your_line_channel_secret
